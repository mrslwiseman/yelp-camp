<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <h1>Add Comment to <%= campground.name %></h1>

      <div id="form">
        <form action="/campgrounds/<%=campground._id%>/comments" method="POST">



          <div class="form-group">
            <textarea class="form-control" type="text" name="comment[text]" placeholder="Enter your comment here"></textarea>
          </div>


          <div class="form-group">
            <input class="form-control" type="text" name="comment[author]" placeholder="Your Name">
          </div>


          <div class="form-group">
            <input class="btn btn-lg btn-default btn-block btn-primary" type="submit">
          </div>
        </form>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>
