<% include ../partials/header %>
<div class="container">
<header class="jumbotron">
	<div class="container">

			<%if(user) { %>
				<h1>Welcome back <%= user.username %></h1>

		<% } else { %>
			<h1>Welcome to YELPcamp!</h1>
	<% } %>




		<p>View our hand-picked campgrounds from all over the world.</p>
		<p>
			<a class="btn btn-primary btn-large" href="/">Home</a>
			<a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
		</p>
		</div>
</header>


<div class="row">
	<div class="col-lg-12">
		<h3>Our Most Popular Campgrounds</h3>
	</div>
</div>


<div class="row text-center" style="display:flex; flex-wrap:wrap;">


	<% campgrounds.forEach(camp => { %>
	<div class="col-md-3 col-sm-6">
	<div class="thumbnail">

		<img src="<%=camp.image%>"/>
<div class="caption">
	<h4><%=camp.name%></h4>
	<a class="btn btn-primary" href="/campgrounds/<%= camp["_id"]%>">More Info</a>
</div>
	</div>
</div>
<% })%>
</div>




<% include ../partials/footer %>
